<ul class="tabs" data-tab>
  <li class="tab-title active"><a href="#fd_forms">FD FORMS</a></li>
  <li class="tab-title"><a href="#shopping">SHOPPING</a></li>
  <li class="tab-title"><a href="#misc">MISC</a></li>
  <li class="tab-title"><a href="#enterprise">ENTERPRISE</a></li>
</ul>
<div class="tabs-content">
		<div class="content active" id="fd_forms">
			<div id="accordion">
				<% @fd_emails.each do |fdemail|%>
					<h3><%= fdemail.name %></h3>
					<div class="all_content" >
						<div class="show_data" id="content_<%= fdemail.id %>">
							<p style="float:left; width:92%"><b>Subject: </b> <%= fdemail.subject %> </p>
							<input type="button" value="EDIT" class="tiny button edit" id="edit_<%= fdemail.id %>">
							<div style="border:1px solid; padding:5px;">
								<%= raw fdemail.content %>
							</div>

						</div>

						<div id="edit_content_<%= fdemail.id %>" style="display:none;">
						 <form class="form_<%= fdemail.id %>">
							<label style="float: left; font-weight: bold; padding: 6px; width: 10%; font-size:17px;" > Subject : </label><input type = "text" name="subject" value="<%= fdemail.subject %>" style="width:90%;  float:left;"> <br>
							<% if fdemail.name == "Round Robin" || fdemail.name == "New FD Loan Submission" %>
								<label style="float: left; font-weight: bold; padding: 6px; width: 10%; font-size:17px;" > To : </label><input type = "text" name="to" value="<%= fdemail.to %>" style="width:90%;  float:left;"> <br>
							<% end %>
							<textarea name="content" style = "width: 921px; height: 297px;" ><%= fdemail.content %></textarea>
							<input type="hidden" value="<%= fdemail.id %>" name="id">
							<b>Note:</b> Please don't change these words <b>"<%= fdemail.fixed_variable %>"</b>.
							<br>
							<div style="margin-top:15px;">
								<input type="button" class="tiny button success save" value="SAVE" id="<%= fdemail.id %>" onclick="save_email('<%= fdemail.id %>')"><input type="button" class="tiny button alert" value="CANCEL" onclick="cancel_save('<%= fdemail.id %>')"  style="margin-left:10px;">
							</div>
						</form>

						</div>
					</div>
				<% end %>
			</div>
		</div>
