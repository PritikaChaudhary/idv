              <span class="p-title">Request Docs</span>
          </a>
        </li>
    <% elsif @adminLogin==true %>
        <li>
          <a href="javascript:void(0);" <% if @loan.doc_url.blank? %> onclick="callFun('<%= @url %>','show-urls','loan-url-form','generate_doc_url')" <% else %> class="show_doc_div" <% end %> id="gen_url">
