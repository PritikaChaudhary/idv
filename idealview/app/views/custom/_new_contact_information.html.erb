          <p><input  name="Email" type="text" class="loan_info_fields"></p>
        </div>
      </div>

      <div class="columns medium-12"  id="contact_Phone"  <% if @contact_tab.custom_fields.include? "Phone"%> style="display:none;" <% end %>>
