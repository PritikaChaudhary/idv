<div class="content-white-box">
  <div class="cwb-header">
      <h3>Contact Information</h3>
  </div>
  <div class="cwb-content">
    <div class="row">
      <div class="columns medium-12" id="contact_FirstName" <% if @contact_tab.custom_fields.include? "FirstName"%> style="display:none;" <% end %>>
        <div class="trans-info-item">
          <strong>First Name:</strong>
          <p><input  name="FirstName" type="text" class="loan_info_fields"></p>
