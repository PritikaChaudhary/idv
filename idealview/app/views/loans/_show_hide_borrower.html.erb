    <span id="hide_<%=field_name%>_<%= borwr.id %>" <% if borwr.hide_fields.include? "#{field_name}" %> style="display:none; float:right; margin-top:0px; margin-right:2px;" <% else %> style="float:right;  <% if field_name=="income_how_long"  || field_name=="ever_borrow_money" %>margin-top:12px; <% else %> margin-top:0px; <% end %>  margin-right:2px;" <% end %> >
