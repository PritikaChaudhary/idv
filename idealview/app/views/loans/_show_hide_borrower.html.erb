<% unless borwr.hide_fields.blank? %>
    <span id="show_<%=field_name%>_<%= borwr.id %>" <% if borwr.hide_fields.include? "#{field_name}" %> style="float:right; margin-top:0px; margin-right:2px;" <% else %> style="display:none; float:right;  <% if field_name=="income_how_long"  || field_name=="ever_borrow_money" %>margin-top:12px; <% else %> margin-top:0px; <% end %>  margin-right:2px;" <% end %>>
    <a style="" onclick="show_borrower_field('<%= borwr.id %>', '<%=field_name%>');" title = "Show">
