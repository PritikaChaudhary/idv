<section class="top-bar-section">
    <ul class="right">
      <li class="divider"></li>
      

      <% 
      if !current_user.blank?
        roles=current_user.roles
        @names = Array.new
        roles.each do |role|
          @names << role.name
        end
        #abort("#{@names}")
        checkAdmin = @names.include?('Admin') 
        checkBroker = @names.include?('Broker')
      end
      if !current_user.blank? && (current_user.is_admin || current_user.role?('Admin')) %>
      	<li class="has-dropdown">
      		<%= link_to('Admin',  admin_path) %>
      		<ul class="dropdown">
      			<li><%= link_to('New User',  admins_new_user_path) %></li>
                <li><a href="http://idealview.us/loans/pdf_files/listing">Pipelines</a></li>
      		</ul>
      	</li>
      	<li>
      		<%= link_to('All Loans',  loans_path) %>
      	</li>
      	 	<li class="has-dropdown">
                   <a href="javascript:void(0);">Lenders</a>
                  <ul class="dropdown">
      					<li><a href="http://idealview.us/lenders">View</a></li>
                        <li><a href="http://idealview.us/lenders/add">Add</a></li>
      			  </ul>
            </li>
            <li>
                  <a href="http://idealview.us/brokers">Brokers</a>
            </li>
            <li>
                  <a href="http://idealview.us/loans/application/create">Application</a>
            </li>
            <li>
                  <a href="http://idealview.us/emails">Emails</a>
            </li>
      	
      <% end %>

       <% if checkBroker==true && checkAdmin==false %>
        <li>
             <a href="http://idealview.us/brokers/settings">Settings</a>
        </li>
        <li>
          <%= link_to('All Loans',  loans_path) %>
        </li>
        <li>
          <a href="http://idealview.us/loans/application/create">Application</a>
        </li>
        
        <% unless @infoBroker.permissions.blank? 
               
                @acess = @infoBroker.permissions.split(",")
                @check_permission = @acess.include? 'add_users'
                
                if @check_permission == true
                    add_subuser = "true"
                end 
        end
         if @infoBroker.parent_user.blank?
                add_subuser = "true"
         end %>

        
          <li class="has-dropdown">
              <a href='http://idealview.us/brokers/sub_brokers'>Sub Brokers</a>
          <% if add_subuser=="true" %>
             <ul class="dropdown">
              <li><a href="http://idealview.us/brokers/add_user">Add Broker</a></li>
             </ul> 
          <% end %>
        </li>
       
       <% end %>

				<% if user_signed_in? %>
				
				<li class="has-dropdown">
					<a href='#'><%= current_user.email %></a>
					
					<ul class="dropdown">
						<li><%= link_to('Change Password',  edit_user_registration_path) %></li>
						<li><%= link_to('Logout', destroy_user_session_path) %></li>
					</ul> 
				</li>

				<% else %>
					<li><%= link_to('Login', new_user_session_path)  %></li>
				<% end %>

			</ul>
</section>
