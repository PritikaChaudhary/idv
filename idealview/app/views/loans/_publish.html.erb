  function share_lender()
  {
    $('#myModal3').foundation('reveal', 'open');
  }
</script>
<div class="sidebar-item-content">
  <ul class="publish-btns">
    <li>
        <a href="http://<%= @hostname %>/loans/detail/<%= @loan['_id'] %>" target="_blank">
            <span class="p-thumb"><img src="/assets/p-ico-001.png"></span>
            <span class="p-title">Preview</span>
        </a>
    </li>
     <% @url=url_for :controller=>'loan_urls', :action=>'generate_url', :id=>@loan.id %>
